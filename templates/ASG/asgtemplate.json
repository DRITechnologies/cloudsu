{
    "Type": "AWS::AutoScaling::AutoScalingGroup",
    "Properties": {
        "LaunchConfigurationName": {
            "Ref": "LC<%= app_name %><%= version %>"
        },
        "MinSize": "<%= min_size %>",
        "MaxSize": "<%= max_size %>",
        "HealthCheckGracePeriod": 360,
        "HealthCheckType": "ELB",
        "Tags": [{
            "Key": "version",
            "Value": "<%= version %>",
            "PropagateAtLaunch": true
        }, {
            "Key": "app_name",
            "Value": "<%= app_name %>",
            "PropagateAtLaunch": true
        }, {
            "Key": "Name",
            "Value": "<%= stack_name %>-<%= app_name %>-<%= version %>",
            "PropagateAtLaunch": true
        }],
        "LoadBalancerNames": []
    },
    "UpdatePolicy": {
        "AutoScalingRollingUpdate": {
            "MinInstancesInService": "1",
            "MaxBatchSize": "1",
            "PauseTime": "PT30S"
        }
    }
}